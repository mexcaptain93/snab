@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family $mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0

a
	color inherit
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none
	border:none
	background-image:none
	background-color:transparent
	-webkit-box-shadow: none
	-moz-box-shadow: none
	box-shadow: none

*, *:before, *:after
	box-sizing border-box

img
	max-width: 100%
	max-height: 100%

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto
	padding: 0 18px
	color: $gray_dark2
	font-size: 14px
	line-height: 18px

	@media $tablet
		font-size: 12px
		padding: 0 20px

	@media $desktop_small
		font-size: 24px
		line-height: 36px

	@media $desktop
		padding: 0 72px

	p
		margin-bottom: 18px

		@media $desktop_small
			margin-bottom: 36px



.center
	text-align: center

.like-h1
	margin-bottom: 36px

	font-size: 14px
	line-height: 18px
	font-weight: bold
	color: $gray_dark
	text-align: center
	text-transform: uppercase

	@media $tablet
		position: relative
		padding-bottom: 20px
		margin-bottom: 42px

	@media $desktop
		font-size: 40px
		line-height: 40px
		padding-bottom: 50px
		margin-bottom: 71px

	&::after

		@media $tablet
			content: ''
			width: 80px
			height: 1px
			background-color: $red
			position: absolute
			left: 50%
			transform: translateX(-50%)
			bottom: 0

		@media $desktop
			width: 306px
			height: 4px

.like-h2 

	@extend .like-h1

